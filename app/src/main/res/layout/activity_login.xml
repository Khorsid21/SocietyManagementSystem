<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:overScrollMode="never"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/otp1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="60dp"
            android:contentDescription="OTP Verification Using Firebase"
            android:src="@drawable/otp1" />

        <ImageView
            android:id="@+id/otp2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="60dp"
            android:contentDescription="OTP Verification Using Firebase"
            android:src="@drawable/otp2"
            android:visibility="gone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="OTP Verification"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="We will send you an One Time Password on this mobile number"
            android:textColor="#9E9595"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="Enter The OTP Send TO "
            android:textColor="#9E9595"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mob1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="Enter Mobile Number"
            android:textColor="#9E9595"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mob2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="aaa"
            android:textColor="#9E9595"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c1Code"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
                android:gravity="center"
                android:textColor="#000000"

                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/cCode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="+91"
                android:textColor="#000000"

                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputmobile"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center"

                android:hint="1234567890"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_marginLeft="23dp"
                android:id="@+id/otpnoll"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/oVehNo"

                >

                <EditText

                    android:id="@+id/eotp1"
                    android:layout_width="41dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_border"
                    android:layout_gravity="fill_vertical"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="LabelFor" />

                <EditText
                    android:id="@+id/eotp2"
                    android:layout_marginLeft="7dp"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_border"
                    android:layout_gravity="fill_vertical"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="LabelFor"
                    />
                <EditText
                    android:id="@+id/eotp3"
                    android:layout_marginLeft="7dp"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_border"
                    android:layout_gravity="fill_vertical"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="LabelFor"
                    />

                <EditText
                    android:layout_marginLeft="7dp"
                    android:id="@+id/eotp4"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_border"
                    android:layout_gravity="fill_vertical"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="LabelFor"
                    />

                <EditText
                    android:id="@+id/eotp5"
                    android:layout_marginLeft="7dp"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_border"
                    android:layout_gravity="fill_vertical"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="LabelFor"
                    />

                <EditText
                    android:layout_marginLeft="7dp"
                    android:id="@+id/eotp6"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_border"
                    android:layout_gravity="fill_vertical"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="LabelFor"
                    />
            </LinearLayout>


            <EditText
                android:drawableLeft="@drawable/otp_icon"
                android:drawablePadding="10dp"
                android:id="@+id/enterotp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center"
                android:hint="Enter OTP"
                android:visibility="gone"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"

                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <Spinner
                android:id="@+id/rolelogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"

                />


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80sp"
                    android:layout_weight="1"
                    android:text="Admin"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:buttonTint="#0040FF" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="1"
                    android:text="Society Member"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:buttonTint="#0040FF" />


            </RadioGroup>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="70dp"
            android:background="#FFFFFF"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <Button
                android:id="@+id/buttongetotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="#008EFF"
                android:text="Get OTP"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/buttonverifyotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="#008EFF"
                android:text="Verify OTP"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/resendotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="30dp"
                android:background="#008EFF"
                android:text="Resend OTP"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/signupll"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:text="Don't have account?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textColor="#9C09B6"
                android:id="@+id/txtSignUp"
                android:layout_marginRight="6dp"/>


        </LinearLayout>

    </LinearLayout>


</ScrollView>