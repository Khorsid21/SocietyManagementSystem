<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_percent=".78">


    <TextView
        android:textSize="18sp"
        android:id="@+id/oSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Select Date"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:textSize="18sp"
        android:id="@+id/oStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="Start Time"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/oSelDateBtn" />



    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/oSelDateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/cardview_border"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="Date"
        android:theme="@style/ButtonStyleTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/oStartTime"
        app:layout_constraintTop_toBottomOf="@+id/oSelectDate" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/oSelTimeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/cardview_border"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="Time"
        android:theme="@style/ButtonStyleTemp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oStartTime" />

    <TextView
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/oValidFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:text="Valid For "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/oStartTime"
        app:layout_constraintTop_toBottomOf="@+id/oSelDateBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/oValBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cardview_border"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="valid"
        android:theme="@style/ButtonStyleTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toEndOf="@+id/oSelTimeBtn"
        app:layout_constraintTop_toBottomOf="@+id/oValidFor" />

    <TextView
        android:textColor="#000000"
        android:id="@+id/oVehNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:textSize="18sp"
        android:text="Add Last 4 Digit Of Vehicle No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oSelTimeBtn" />


    <LinearLayout
        android:layout_marginLeft="23dp"
        android:id="@+id/vehnoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oVehNo"
        android:layout_marginTop="20dp"
        >

        <EditText

            android:id="@+id/inputVehNo1"
            android:layout_width="41dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_border"
            android:layout_gravity="fill_vertical"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/inputVehNo2"
            android:layout_marginLeft="7dp"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_border"
            android:layout_gravity="fill_vertical"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />
        <EditText
            android:id="@+id/inputVehNo3"
            android:layout_marginLeft="7dp"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_border"
            android:layout_gravity="fill_vertical"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />

        <EditText
            android:layout_marginLeft="7dp"
            android:id="@+id/inputVehNo4"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_border"
            android:layout_gravity="fill_vertical"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/oSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/cardview_border"
        android:text="Submit"
        android:textAlignment="center"
        android:theme="@style/ButtonStyleTemp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vehnoll"
        />

</androidx.constraintlayout.widget.ConstraintLayout>