<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Genpdf">


    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nature_001"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gatepassll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/view_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <LinearLayout
            android:id="@+id/gatepassll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintHeight_percent=".40"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/gatepassll">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"

                    android:text="Name " />

                <EditText
                    android:hint="Name here"
                    android:id="@+id/GPUname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginRight="7dp"
                    android:layout_height="wrap_content"

                    android:text="Phone No " />

                <EditText
                    android:hint="Name here"
                    android:inputType="number"
                    android:id="@+id/GPUphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Spinner
                    android:id="@+id/gatepasstypespinner"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame1"
            android:visibility="gone"
            android:layout_width="match_parent"
        android:layout_marginTop="15dp"
            app:layout_constraintHeight_percent=".0"
            app:layout_constraintTop_toBottomOf="@id/gatepassll1"

            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:id="@+id/oSelectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Select Date"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:textSize="15sp"
                android:id="@+id/oStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:text="Start Time"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/GPOseldate" />



            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/GPOseldate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cardview_border"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="Date"
                android:theme="@style/ButtonStyleTemp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/oStartTime"
                app:layout_constraintTop_toBottomOf="@+id/oSelectDate" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/GPOseltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/cardview_border"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="Time"

                android:theme="@style/ButtonStyleTemp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/oStartTime" />

            <TextView
                android:textSize="15sp"
                android:textColor="#000000"
                android:id="@+id/oValidFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="15dp"
                android:text="Valid For "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/oStartTime"
                app:layout_constraintTop_toBottomOf="@+id/GPOseldate" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/GPOselval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cardview_border"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="valid"
                android:theme="@style/ButtonStyleTemp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.093"
                app:layout_constraintStart_toEndOf="@+id/GPOseltime"
                app:layout_constraintTop_toBottomOf="@+id/oValidFor" />




        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"

            app:layout_constraintHeight_percent=".0"
            app:layout_constraintTop_toBottomOf="@id/gatepassll1"

            android:layout_height="wrap_content">



            <TextView
                android:textSize="15sp"
                android:id="@+id/ftvselday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:text="Select Days of Week"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:textSize="15sp"
                android:id="@+id/ftvselVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="Select Validity"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/GPFseldays" />



            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/GPFseldays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cardview_border"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="Days"
                android:theme="@style/ButtonStyleTemp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/ftvselVal"
                app:layout_constraintTop_toBottomOf="@+id/ftvselday" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/GPFselval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cardview_border"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="Validity"
                android:theme="@style/ButtonStyleTemp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ftvselVal" />

            <TextView
                android:textColor="#000000"
                android:id="@+id/valid_for12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:text="Select Allowed Time Slot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GPFselval" />




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/GPFselstarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cardview_border"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="Start Time"
                android:theme="@style/ButtonStyleTemp"
                app:layout_constraintTop_toBottomOf="@id/valid_for12"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/GPFselendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/cardview_border"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:text="End Time"
                android:theme="@style/ButtonStyleTemp"
                app:layout_constraintLeft_toRightOf="@id/GPFselstarttime"
                app:layout_constraintTop_toBottomOf="@id/valid_for12" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/pdfgen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Button"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>