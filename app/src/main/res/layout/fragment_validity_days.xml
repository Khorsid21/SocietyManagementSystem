<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fll2"
    android:background="@drawable/bottom_sheet_layout"
    >

    <View
        android:layout_marginTop="7dp"
        android:layout_width="43dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:background="#000000"

        />

    <LinearLayout

        android:layout_margin="5dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:theme="@style/ButtonStlye123"
            android:background="@drawable/valid_btn_theme"
            android:textSize="12sp"
            android:text="1 Week"
            android:id="@+id/fvalid1wk"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/valid_btn_theme"
            android:layout_marginTop="10dp"
            android:theme="@style/ButtonStlye123"
            android:layout_marginBottom="10dp"
            android:id="@+id/fvalid15day"
            android:textSize="12sp"
            android:text="15 Days"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:background="@drawable/valid_btn_theme"
            android:id="@+id/fvalid1mnt"
            android:theme="@style/ButtonStlye123"
            android:layout_marginBottom="10dp"
            android:text="1 Month"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            />

    </LinearLayout>




</LinearLayout>