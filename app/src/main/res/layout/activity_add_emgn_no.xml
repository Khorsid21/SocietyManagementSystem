<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEmgnNo">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/Templl"
                android:background="@drawable/bg_top"
                android:layout_width="match_parent"

                android:layout_height="200dp">

            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/prof_pic_emgnno"
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:background="@drawable/vlog"
                android:textAllCaps="false"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/circular_emgnno_profile_pic"
                android:layout_width="140dp"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="4dp"
                android:layout_height="140dp" />

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Temapll"
            android:layout_below="@id/Templl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:layout_marginTop="20dp"
                android:id="@+id/text_name_emgnno"
                android:layout_width="match_parent"
                android:textSize="22dp"
                android:hint="Enter Name"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"


                android:textColor="@color/md_black_1000"

                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/text_address_rmgnno"
                android:hint="Enter Address"
                android:textColor="@color/md_black_1000"
                android:layout_width="match_parent"

                android:layout_below="@+id/text_name_emgnno"
                android:textSize="22dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" />

            <Spinner

                android:id="@+id/spinner_type_emgnno"
                android:layout_below="@+id/text_address_rmgnno"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="50dp">

            </Spinner>

            <EditText
                android:id="@+id/text_mobile_emgnno"
                android:hint="Enter Mobile Number"
                android:layout_width="match_parent"
                android:layout_below="@+id/spinner_type_emgnno"
                android:textSize="22dp"
                android:maxLength="10"
                android:textColor="@color/md_black_1000"
                android:inputType="number"
                android:layout_margin="8dp"

                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/emgnno_email"
                android:layout_margin="8dp"

                android:textSize="22dp"
                android:layout_below="@+id/text_mobile_emgnno"
                android:layout_width="match_parent"
                android:hint="Enter Of Email"
                android:layout_height="wrap_content" />

            <EditText
                android:visibility="gone"
                android:id="@+id/emgnnoedSpeciality"
                android:textSize="22dp"
                android:layout_margin="8dp"
                android:hint="Enter Available Blood Type..."
                android:layout_below="@id/emgnno_email"
                android:layout_width="match_parent"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ ,+-"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/emgnnoedCity"
                android:textSize="22dp"
                android:layout_margin="8dp"
                android:hint="Enter City Here..."
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:layout_below="@id/emgnnoedSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btn_add_emgnno"
                android:text="Add Emergency Service"

                android:layout_below="@id/emgnnoedCity"
                android:textColor="@android:color/white"
                android:background="@drawable/button_main_background"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>