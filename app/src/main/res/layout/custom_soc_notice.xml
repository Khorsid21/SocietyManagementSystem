                        <EditText
                            android:scrollbars="vertical"
                            android:lines="4"
                            android:visibility="gone"
                            android:id="@+id/editimagetextnoticefragment"
                            app:layout_constraintEnd_toEndOf="@id/imagetextnoticefragment"
                            app:layout_constraintStart_toStartOf="@id/imagetextnoticefragment"
                            app:layout_constraintTop_toTopOf="@id/imagetextnoticefragment"

                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>

                        <ImageView

                            android:background="#E4E4E4"
                            android:layout_marginTop="15dp"
                            app:layout_constraintVertical_bias="1"
                            android:layout_width="match_parent"
                            android:layout_height="380dp"
                            android:visibility="gone"
                            android:id="@+id/editIMGimagetextnoticefragment"
                            android:src="@drawable/uploadimg"
                            app:layout_constraintHeight_percent="0.35"
                            android:scaleType="centerCrop"
