<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="#000000"
    app:strokeWidth="1dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <com.ramotion.foldingcell.FoldingCell
            android:id="@+id/folding_cell_mm_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userpic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/example_img"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/userpic"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:id="@+id/titlenotice"
                        android:textColor="@color/black"
                        android:layout_marginTop="13dp"
                        android:text="Title Of Notice"
                        />



                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/titlenotice"
                        android:layout_width="wrap_content"
                        android:id="@+id/postedbyii"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/userpic"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="Posted By"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/userpic"

                        android:layout_marginLeft="10dp"
                        android:textSize="10sp"
                        android:id="@+id/noticedatetime"
                        app:layout_constraintTop_toBottomOf="@id/postedbyii"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:text="Date Time"
                        />

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="35dp"

                        android:id="@+id/deletenotice"
                        android:layout_height="35dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/ic_baseline_delete_forever"
                        />

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="55dp"
                        android:layout_width="35dp"
                        android:id="@+id/editnotice"
                        android:layout_height="35dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/edit"
                        />

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="35dp"
                        android:id="@+id/imagedownload"
                        android:visibility="gone"
                        android:layout_height="35dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/ic_baseline_download_24"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
