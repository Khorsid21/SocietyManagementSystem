                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:id="@+id/editimagetextfragmentdone"
                                android:layout_weight="1"
                                android:src="@drawable/check"
                                />

                            <ImageView
                                android:layout_width="35dp"
                                android:id="@+id/editimagetextfragmentnotdone"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:src="@drawable/wrong"
                                />
                        </LinearLayout>

                        <ImageView

                            android:layout_marginTop="15dp"
                            app:layout_constraintVertical_bias="1"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:id="@+id/ITnoticeimage"
                            android:src="@drawable/worker_electricianimage"
                            app:layout_constraintHeight_percent="0.35"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toBottomOf="@id/ITNoticeDesc"
                            app:layout_constraintStart_toStartOf="@id/imagetextnoticefragment"
                            app:layout_constraintEnd_toEndOf="@id/imagetextnoticefragment"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

