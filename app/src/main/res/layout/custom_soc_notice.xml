                            android:scrollbars="vertical"
                            android:lines="5"
                            android:visibility="gone"
                            android:id="@+id/edittextnoticefragment"
                            app:layout_constraintEnd_toEndOf="@id/textnoticefragment"
                            app:layout_constraintTop_toTopOf="@id/textnoticefragment"
                            app:layout_constraintStart_toStartOf="@id/textnoticefragment"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                        <LinearLayout
